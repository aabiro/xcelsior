# Xcelsior — Environment Variables
# Copy to .env and fill in your values.

# ── Alerts: Email (SMTP) ──────────────────────────────────────────────
XCELSIOR_SMTP_HOST=
XCELSIOR_SMTP_PORT=587
XCELSIOR_SMTP_USER=
XCELSIOR_SMTP_PASS=
XCELSIOR_EMAIL_FROM=
XCELSIOR_EMAIL_TO=

# ── Alerts: Telegram ──────────────────────────────────────────────────
XCELSIOR_TG_TOKEN=
XCELSIOR_TG_CHAT_ID=

# ── Docker Image Builder (Phase 16) ─────────────────────────────────
XCELSIOR_REGISTRY=

# ── Marketplace (Phase 17) ──────────────────────────────────────────
XCELSIOR_PLATFORM_CUT=0.20

# ── Auto-Scaling (Phase 19) ─────────────────────────────────────────
XCELSIOR_AUTOSCALE=false
XCELSIOR_AUTOSCALE_MAX=20
XCELSIOR_AUTOSCALE_PROVIDER=

# ── Canada-Only Toggle (Phase 18) ───────────────────────────────────
XCELSIOR_CANADA_ONLY=false


# ── Worker Agent (for GPU hosts) ─────────────────────────────────────
XCELSIOR_HOST_ID=
XCELSIOR_SCHEDULER_URL=http://localhost:8000
XCELSIOR_COST_PER_HOUR=0.50
XCELSIOR_REPORT_INTERVAL=5

# ── Security (Phase 13) ──────────────────────────────────────────────
XCELSIOR_SSH_KEY_PATH=~/.ssh/xcelsior
XCELSIOR_SSH_USER=xcelsior
XCELSIOR_API_TOKEN=
