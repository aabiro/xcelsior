# Xcelsior — Environment Variables
# Copy to .env and fill in your values.

# ── Alerts: Email (SMTP) ──────────────────────────────────────────────
XCELSIOR_SMTP_HOST=
XCELSIOR_SMTP_PORT=587
XCELSIOR_SMTP_USER=
XCELSIOR_SMTP_PASS=
XCELSIOR_EMAIL_FROM=
XCELSIOR_EMAIL_TO=

# ── Alerts: Telegram ──────────────────────────────────────────────────
XCELSIOR_TG_TOKEN=
XCELSIOR_TG_CHAT_ID=

# ── Security (Phase 13) ──────────────────────────────────────────────
XCELSIOR_SSH_KEY_PATH=~/.ssh/xcelsior
XCELSIOR_SSH_USER=xcelsior
XCELSIOR_API_TOKEN=
